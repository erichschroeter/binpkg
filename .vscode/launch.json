    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) binpkg.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Debug/binpkg.exe",
            "args": [
                "-o",
                "test.pkg.bin",
                "first.bin",
                "test.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(gdb) tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/Debug/tests.exe",
            "args": [
                "Pkg write example with two files"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        }
    ]
}